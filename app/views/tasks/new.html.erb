<h1> New Task </h1>
<%= form_with url: tasks_path, method: :task, local: true do |form| %>
  <div> 
    <%= form.label :name %><br />
    <%= form.text_field :name %>
  </div>
  <div> 
    <%= form.label :description %><br />
    <%= form.text_area :description, size: "60x10" %>
  </div>
  <div>
  <%= form.submit %>
  </div>
  
  <p style=font-size:18px;><%= form.label :priority %><br /></p>
  <b><%= form.label :priority, "Pending", value: :pending  %></b>
  <%= form.radio_button :priority, :pending %> 
  <b><%= form.label :priority, "Active", value: :active %></b>
  <%= form.radio_button :priority, :active %>
  <b><%= form.label :priority, "Completed", value: :completed %></b>
  <%= form.radio_button :priority, :completed %>
<% end %>